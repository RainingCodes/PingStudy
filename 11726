#include <stdio.h>
#include <stdlib.h>
int find(int n, int *m) {

	if (n == 0)
		return 0;
	if (n == 1 && m[n] == 0) {
		m[1] = 1;
		return m[1];
	}
	else if (n == 2 && m[n] == 0) {
		m[2] = 2;
		return m[2];
	}
	else if (m[n] == 0)
		m[n] = (find(n - 1, m) + find(n - 2, m)) % 10007;
	
	return m[n];

}
int main(void)
{
	int n, *a, *m, i;

	scanf("%d", &n);

	m = (int*) malloc(sizeof(int) * (n + 1));

	for(i = 1; i <= n; i++)
		m[i] = 0;

	printf("%d", find(n, m));
}
