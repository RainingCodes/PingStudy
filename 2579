#include <stdio.h>
#include <stdlib.h>
int max(int a, int b) {
	if ( a >= b)
		return a;
	else
		return b;
}
int recursion(int *arr, int k, int sum, int index)
{
	int a, b;

	sum += arr[index];
	
	if(index <= 0)
		return max(a, b);

	if (k == 1)
		a = recursion(arr, 0, sum, index - 1);
	else
		b = recursion(arr, 1, sum, index - 2);

	return max(a, b);
}
int main(void)
{
	int num, i, *a;

	scanf("%d", &num);

	a = (int*) malloc(sizeof(int) * (num + 1));

	for(i = 0; i < num; i++)
		scanf("%d", &a[i + 1]);

	printf("%d", recursion(a, 1, 0, num));
}
